{
  "name": "deadlock-optimized-launcher",
  "version": "3.0.0",
  "description": "Optimized launcher for Deadlock",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:clean": "node -e \"const fs=require('fs'); fs.readdirSync('dist').forEach(f=>{if(!f.endsWith('.exe')) fs.rmSync('dist/'+f, {recursive:true,force:true})})\"",
    "build": "electron-builder build --win && npm run build:clean"
  },
  "build": {
    "appId": "com.optimizer.deadlock",
    "productName": "Deadlock Optimized Launcher",
    "compression": "maximum",
    "asar": true,
    "electronLanguages": [
      "en-US"
    ],
    "files": [
      "main.js",
      "src/**",
      "preload.js",
      "renderer/**",
      "index.html",
      "style.css",
      "icon.png",
      "sound/**",
      "!**/*.map",
      "!**/*.d.ts",
      "!**/node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme,AUTHORS,CONTRIBUTORS,NOTICE}",
      "!**/node_modules/**/{test,__tests__,tests,powered-test,example,examples,doc,docs,benchmark,benchmarks}/**",
      "!**/node_modules/**/{.github,.vscode,.idea}/**",
      "!**/node_modules/koffi/src/**",
      "!**/node_modules/koffi/vendor/**",
      "!**/node_modules/koffi/doc/**",
      "!**/node_modules/koffi/lib/**",
      "!**/node_modules/koffi/build/koffi/{darwin_arm64,darwin_x64,freebsd_arm64,freebsd_ia32,freebsd_x64,linux_arm64,linux_armhf,linux_ia32,linux_loong64,linux_riscv64d,linux_x64,musl_arm64,musl_x64,openbsd_ia32,openbsd_x64,win32_arm64,win32_ia32}/**"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "Deadlock Optimized Launcher.exe",
      "requestExecutionLevel": "admin",
      "useZip": false
    }
  },
  "keywords": [],
  "author": "maiblemoccasin",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "koffi": "^2.15.1"
  },
  "devDependencies": {
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1"
  }
}
